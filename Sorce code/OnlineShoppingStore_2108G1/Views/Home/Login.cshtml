@model OnlineShoppingStore_2108G1.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<main class="main">
    <nav class="breadcrumb-nav">
        <div class="container">
            @*<ul class="breadcrumb">
                    <li><a href="#"><i class="d-icon-home"></i></a></li>
                    <li>Register</li>
                </ul>*@
        </div>
    </nav>
    <div class="page-content mt-6 pb-2 mb-10">
        <div class="container">
            <div class="login-popup">
                <div class="form-box">
                    <div class="tab tab-nav-simple tab-nav-boxed form-tab">
                        <ul class="nav nav-tabs nav-fill align-items-center border-no justify-content-center mb-5" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active border-no lh-1 ls-normal" href="#register">Login</a>
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="register">



                                @using (Html.BeginForm())
                                {

                                    <div class="form-group">

                                        @Html.ValidationMessage("InvalidLogin", "", new { style = "font-size: 12px; color:red; font-weight:bold;" })

                                    </div>





                                   


                                    <div class="form-group">
                                        @Html.EditorFor(m => m.Email, new
                                        {
                                            htmlAttributes = new
                                            {
                                                type = "email",
                                                @class = "form-control",
                                                placeholder = "Your Email*",
                                                required = "required"
                                            }
                                        })
                                    </div>



                                    <div class="form-group">
                                        @Html.EditorFor(m => m.Password, new
                                        {
                                            htmlAttributes = new
                                            {
                                                type = "password",
                                                @class = "form-control",
                                                placeholder = "Your Password *",
                                                required = "required"
                                            }
                                        })
                                    </div>



                                   

                                  

                                    <button class="btn btn-dark btn-block btn-rounded" type="submit">Login</button>


                                }





                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

